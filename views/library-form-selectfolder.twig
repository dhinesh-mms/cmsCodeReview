{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% set name = media.name %}
    {% trans %} Media {{ name }} {% endtrans %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Save" %}, $("#mediaSelectFolderForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="mediaSelectFolderForm" class="XiboForm form-horizontal" method="put" action="{{ url_for("library.selectfolder", {id: media.mediaId}) }}">
                <div class="form-group row">
                    <label class="col-sm-2 control-label">{% trans "Current Folder" %}</label>
                    <div class="col-sm-10" style="padding-top: 7px">
                        <span id="originalFormFolder"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 control-label">{% trans "Move to Selected Folder:" %}</label>
                    <div class="col-sm-10">
                        <div class="card p-3 mb-3 bg-light" id="container-folder-form-tree"></div>
                    </div>
                </div>

                {{ forms.hidden('folderId', media.folderId) }}
            </form>
        </div>
    </div>
{% endblock %}