{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Delete Notification" %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Yes" %}, $("#notificationDeleteForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="notificationDeleteForm" class="XiboForm form-horizontal" method="delete" action="{{ url_for("notification.delete", {"id": notification.notificationId}) }}">
                {% set message %}{% trans "Are you sure you want to delete this notification? It will be deleted for all CMS users. This cannot be undone" %}{% endset %}
                {{ forms.message(message) }}
            </form>
        </div>
    </div>
{% endblock %}