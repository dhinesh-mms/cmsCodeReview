{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Verify" %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Verify" %}, $("#verifyForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="verifyForm" class="XiboForm form-horizontal" method="put" action="{{ url_for("module.verify") }}">
                {% set message %}{% trans "Verify all modules have been installed correctly by reinstalling any module related files" %}{% endset %}
                {{ forms.message(message) }}
            </form>
        </div>
    </div>
{% endblock %}