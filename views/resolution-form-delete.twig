{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Delete Resolution" %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Yes" %}, $("#resolutionDeleteForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="resolutionDeleteForm" class="XiboForm form-horizontal" method="delete" action="{{ url_for("resolution.delete", {"id": resolution.resolutionId}) }}">
                {% set message %}{% trans "Are you sure you want to delete this Resolution? This cannot be undone" %}{% endset %}
                {{ forms.message(message) }}     
            </form>
        </div>
    </div>
{% endblock %}