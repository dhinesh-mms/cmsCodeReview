{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% set syncGroupName = syncGroup.name %}
    {% trans %}Delete {{ syncGroupName }}{% endtrans %}
{% endblock %}

{% block formButtons %}
    {% trans "No" %}, XiboDialogClose()
    {% trans "Yes" %}, $("#syncGroupDeleteForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="syncGroupDeleteForm" class="XiboForm form-horizontal" method="delete" action="{{ url_for("syncgroup.delete", {id: syncGroup.syncGroupId}) }}">
                {% set message %}{% trans "Are you sure you want to delete this item?" %}{% endset %}
                {{ forms.message(message) }}
            </form>
        </div>
    </div>
{% endblock %}