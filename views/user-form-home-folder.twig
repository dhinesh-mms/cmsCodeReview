{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Set home folder" %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Save" %}, $("#userHomeFolderForm").submit()
{% endblock %}

{% block callBack %}userHomeFolderFormOpen{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="userHomeFolderForm" class="XiboForm form-horizontal" method="post" action="{{ url_for("user.homeFolder", {id: user.userId}) }}">
                <div class="tab-pane" id="home-folder">
                    <p>{{ "Set a home folder to use as the default folder for new content."|trans }}</p>
                    {{ forms.hidden("homeFolderId", user.homeFolderId) }}
                    <div id="container-form-folder-tree" class="card card-body bg-light"></div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}