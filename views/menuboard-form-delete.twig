{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Delete Menu Board" %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Yes" %}, $("#menuBoardDeleteForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="menuBoardDeleteForm" class="XiboForm form-horizontal" method="delete" action="{{ url_for("menuBoard.delete", {"id": menuBoard.menuId}) }}">
                {% set message %}{% trans "Are you sure you want to delete this Menu Board? This action will remove all Categories and their Products linked to this Menu Board. This cannot be undone" %}{% endset %}
                {{ forms.message(message) }}
            </form>
        </div>
    </div>
{% endblock %}