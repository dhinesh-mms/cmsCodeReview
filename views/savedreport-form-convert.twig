{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Convert Saved Report" %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Yes" %}, $("#savedReportConvertForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="savedReportConvertForm" class="XiboForm form-horizontal" method="get" action="{{ url_for("savedreport.convert", {"id": savedReport.savedReportId, "name": savedReport.reportName}) }}">
                {% set message %}{% trans "After you convert a saved report you can export and preview the report." %} {% trans "Are you sure you want to convert this saved report? This cannot be undone." %}{% endset %}
                {{ forms.message(message) }}
            </form>
        </div>
    </div>
{% endblock %}